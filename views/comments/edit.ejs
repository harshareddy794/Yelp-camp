<%- include("../partials/header") -%>
<h2>Edit comment to <%= campground.name %></h2>
<form action="/campground/<%= campground._id %>/comment/<%= comment._id %>?method=PUT" method="post">
    <div class="form-group">
        <input type="text" name="newComment[text]" class="form-control" value="<%= comment.text %>" required>
    </div>
    <input type="submit" value="Submit" class="btn btn-primary btn-block">
</form>
<%- include("../partials/footer") -%>